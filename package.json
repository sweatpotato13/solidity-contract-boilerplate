{
    "name": "solidity-contract-boilerplate",
    "version": "2.4.2",
    "main": "index.js",
    "author": "CuteWisp",
    "license": "BUSL-1.1",
    "files": [
        "artifacts",
        "typechain-types"
    ],
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "pnpm  lint:typescript"
        ],
        "*.{sol}": [
            "pnpm lint:solidity"
        ],
        "*.{md,json}": [
            "prettier --write"
        ]
    },
    "scripts": {
        "build": "npx hardhat compile",
        "coverage": "npx hardhat coverage",
        "node": "npx hardhat node",
        "deploy:hardhat": "npx hardhat deploy --network hardhat",
        "deploy:local": "npx hardhat deploy --network local",
        "lint:typescript": "eslint 'test/**/*.ts' 'scripts/**/*.ts'",
        "lint:typescript:fix": "prettier --config .prettierrc.json --write 'scripts/**/*.ts' 'test/**/*.ts' 'hardhat.config.ts'",
        "lint:solidity": "npx solhint 'src/contracts/**/*.sol'",
        "lint:solidity:fix": "prettier --write --plugin=prettier-plugin-solidity 'src/contracts/**/*.sol'",
        "lint": "pnpm run lint:typescript && pnpm run lint:solidity",
        "lint:fix": "pnpm run lint:typescript:fix && pnpm run lint:solidity:fix",
        "test": "REPORT_GAS=true npx hardhat test",
        "pre-commit": "lint-staged",
        "prepare": "husky"
    },
    "devDependencies": {
        "@babel/core": "^7.24.7",
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.20.0",
        "@metamask/eth-sig-util": "^7.0.2",
        "@nomicfoundation/hardhat-chai-matchers": "^2.0.7",
        "@nomicfoundation/hardhat-ethers": "^3.0.6",
        "@nomicfoundation/hardhat-ignition": "^0.15.5",
        "@nomicfoundation/hardhat-ignition-ethers": "^0.15.5",
        "@nomicfoundation/hardhat-network-helpers": "^1.0.11",
        "@nomicfoundation/hardhat-toolbox": "^5.0.0",
        "@nomicfoundation/hardhat-verify": "^2.0.8",
        "@nomicfoundation/ignition-core": "^0.15.5",
        "@openzeppelin/contracts": "5.0.2",
        "@rushstack/eslint-patch": "^1.10.3",
        "@typechain/ethers-v6": "^0.5.1",
        "@typechain/hardhat": "^9.1.0",
        "@types/babel__core": "^7",
        "@types/chai": "^4.3.16",
        "@types/eslint__js": "^8.42.3",
        "@types/mocha": ">=10.0.7",
        "@types/node": ">=20.14.9",
        "chai": "^4.2.0",
        "chain": "^0.4.0",
        "dotenv": "^16.4.5",
        "eslint": "^9.20.1",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-security": "^3.0.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "ethers": "^6.13.1",
        "globals": "^15.15.0",
        "hardhat-deploy": "^0.12.4",
        "hardhat-gas-reporter": "1.0.8",
        "hardhat-preprocessor": "^0.1.5",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.3",
        "prettier": "^3.3.2",
        "prettier-plugin-solidity": "^1.3.1",
        "sinon": "^18.0.0",
        "solhint": "^5.0.1",
        "solidity-coverage": "^0.8.12",
        "ts-node": ">=10.9.2",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "5.5.3",
        "typescript-eslint": "8.24.0"
    },
    "dependencies": {
        "hardhat": "^2.22.6",
        "typechain": "^8.3.2"
    }
}
